{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Game",
  "type": "object",
  "required": [
    "missions",
    "name",
    "program",
    "questions",
    "rule_book_url"
  ],
  "properties": {
    "missions": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/Mission"
      }
    },
    "name": {
      "type": "string"
    },
    "program": {
      "type": "string"
    },
    "questions": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/Score"
      }
    },
    "rule_book_url": {
      "type": "string"
    }
  },
  "definitions": {
    "DefaultValue": {
      "oneOf": [
        {
          "type": "object",
          "required": [
            "Number"
          ],
          "properties": {
            "Number": {
              "type": "integer",
              "format": "int32"
            }
          },
          "additionalProperties": false
        },
        {
          "type": "object",
          "required": [
            "Text"
          ],
          "properties": {
            "Text": {
              "type": "string"
            }
          },
          "additionalProperties": false
        }
      ]
    },
    "Mission": {
      "type": "object",
      "required": [
        "prefix",
        "title"
      ],
      "properties": {
        "image": {
          "type": [
            "string",
            "null"
          ]
        },
        "prefix": {
          "type": "string"
        },
        "title": {
          "type": "string"
        }
      }
    },
    "QuestionInput": {
      "oneOf": [
        {
          "type": "object",
          "required": [
            "Numerical"
          ],
          "properties": {
            "Numerical": {
              "type": "object",
              "required": [
                "max",
                "min"
              ],
              "properties": {
                "max": {
                  "type": "integer",
                  "format": "int32"
                },
                "min": {
                  "type": "integer",
                  "format": "int32"
                }
              }
            }
          },
          "additionalProperties": false
        },
        {
          "type": "object",
          "required": [
            "Categorical"
          ],
          "properties": {
            "Categorical": {
              "type": "object",
              "required": [
                "options"
              ],
              "properties": {
                "options": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                }
              }
            }
          },
          "additionalProperties": false
        }
      ]
    },
    "Score": {
      "type": "object",
      "required": [
        "default_value",
        "id",
        "label",
        "label_short",
        "question_input"
      ],
      "properties": {
        "default_value": {
          "$ref": "#/definitions/DefaultValue"
        },
        "id": {
          "type": "string"
        },
        "label": {
          "type": "string"
        },
        "label_short": {
          "type": "string"
        },
        "question_input": {
          "$ref": "#/definitions/QuestionInput"
        }
      }
    }
  }
}